

void main() {
    int a[20];
    int l;
    printf("enter length of array");
    scanf("%d",&l);
    printf("enter %d no of elements",l);
    for(int i=0;i<l;i++)
    {
        scanf("%d",&a[i]);
        
    }
    int max=a[0];
    for(int j=1;j<l;j++)
    {
        if(max<a[j])
        {
            
            max=a[j];
        }
    }
    printf("the largest num is %d",max);
}
